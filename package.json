{
    "name": "pixi_boilerplate",
    "version": "1.0.0",
    "description": "simple boilerplate for 2d games using pixi.js, typescript and vite",
    "main": "src/js/main.js",
    "keywords": [
        "pixi.js"
    ],
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint --fix --ext .ts . ",
        "format": "prettier --write \"**/*.+(js|ts|json)\"",
        "lint & format": "npm run lint && npm run format"
    },
    "browserslist": [
        "> 0.25%, not dead"
    ],
    "author": "UrQo",
    "license": "ISC",
    "dependencies": {
        "@babel/preset-typescript": "^7.10.4",
        "@pixi/particle-emitter": "^5.0.8",
        "@types/fontfaceobserver": "0.0.6",
        "caniuse-lite": "^1.0.30001599",
        "cross-env": "^7.0.2",
        "fontfaceobserver": "^2.1.0",
        "gsap": "^3.13.0",
        "node": "^22.17.0",
        "pixi.js": "^7.4.3",
        "typescript": "^3.9.6"
    },
    "devDependencies": {
        "@babel/core": "^7.10.2",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/polyfill": "^7.10.1",
        "@babel/preset-env": "^7.10.2",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "babel-loader": "^8.1.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^9.1.0",
        "file-loader": "^6.0.0",
        "gulp": "^4.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-cli": "^2.2.1",
        "gulp-each": "^0.5.0",
        "gulp-free-tex-packer": "^0.5.1",
        "gulp-rename": "^2.0.0",
